<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  
  <servlet>
    <servlet-name>loginserv</servlet-name>
    <servlet-class>upmc.stl.aar.servlet.Login</servlet-class>
  </servlet>
  
    <servlet>
    <servlet-name>CreateNewBet</servlet-name>
    <servlet-class>upmc.stl.aar.servlet.CreateBet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>getCurrecies</servlet-name>
    <servlet-class>upmc.stl.aar.servlet.GetCurrencies</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>getCurreciesCron</servlet-name>
    <servlet-class>upmc.stl.aar.servlet.GetCurrenciesCron</servlet-class>
  </servlet>
 
  <servlet>
    <servlet-name>calculategain</servlet-name>
    <servlet-class>upmc.stl.aar.servlet.CalculateBetGainCron</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginserv</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
 
  <servlet-mapping>
    <servlet-name>CreateNewBet</servlet-name>
    <url-pattern>/new</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>getCurrecies</servlet-name>
    <url-pattern>/getCurrecies</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>getCurreciesCron</servlet-name>
    <url-pattern>/getCurreciesCron</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>calculategain</servlet-name>
    <url-pattern>/calculategain</url-pattern>
  </servlet-mapping>
 
  <welcome-file-list>
		<welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
